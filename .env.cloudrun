# VisaVerse Guardian AI - Cloud Run Deployment Environment

# Application settings
APP_NAME="VisaVerse Guardian AI"
VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=cloudrun

# Security settings
ALLOWED_HOSTS=["*.run.app", "api.visaverse.ai"]
CORS_ORIGINS=["https://visaverse.ai", "https://app.visaverse.ai"]

# Service endpoints (Cloud Run URLs - replace with actual URLs after deployment)
DOCUMENT_SERVICE_URL=https://document-service-abcd1234-uc.a.run.app
GRAPH_SERVICE_URL=https://graph-service-efgh5678-uc.a.run.app
RISK_SERVICE_URL=https://risk-service-ijkl9012-uc.a.run.app
MEMORY_SERVICE_URL=https://memory-service-mnop3456-uc.a.run.app

# Database connections (Cloud SQL or managed Neo4j)
NEO4J_URI=bolt://your-neo4j-instance.databases.neo4j.io:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=${NEO4J_PASSWORD}  # Injected from Secret Manager

# External API keys (injected from Secret Manager)
GOOGLE_API_KEY=${GOOGLE_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}

# Storage settings
CLOUD_STORAGE_BUCKET=visaverse-prod-storage

# Logging settings
LOG_LEVEL=INFO

# GCP settings
GCP_PROJECT_ID=${GCP_PROJECT_ID}
GCP_REGION=us-central1

# Cloud Run specific settings
PORT=8080