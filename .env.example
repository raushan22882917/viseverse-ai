# VisaVerse Guardian AI Environment Configuration

# Application settings
APP_NAME="VisaVerse Guardian AI"
VERSION="0.1.0"
DEBUG=false

# Security settings
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]

# Google Cloud Platform settings
GCP_PROJECT_ID=gen-lang-client-0148980288
GCP_REGION=us-central1

# Service endpoints (environment-specific)
# For local development:
# DOCUMENT_SERVICE_URL=http://localhost:8001
# GRAPH_SERVICE_URL=http://localhost:8002
# RISK_SERVICE_URL=http://localhost:8003
# MEMORY_SERVICE_URL=http://localhost:8004

# For Kubernetes deployment:
DOCUMENT_SERVICE_URL=http://document-service:8001
GRAPH_SERVICE_URL=http://graph-service:8002
RISK_SERVICE_URL=http://risk-service:8003
MEMORY_SERVICE_URL=http://memory-service:8004

# For Cloud Run deployment:
