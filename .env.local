# VisaVerse Guardian AI - Local Development Environment

# Application settings
APP_NAME="VisaVerse Guardian AI"
VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=local

# Security settings
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Service endpoints (local development)
DOCUMENT_SERVICE_URL=http://localhost:8001
GRAPH_SERVICE_URL=http://localhost:8002
RISK_SERVICE_URL=http://localhost:8003
MEMORY_SERVICE_URL=http://localhost:8004

# Database connections (local)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=local-dev-password

# External API keys (use test/development keys)
GOOGLE_API_KEY=your-dev-google-api-key
GEMINI_API_KEY=your-dev-gemini-api-key

# Storage settings (local)
CLOUD_STORAGE_BUCKET=visaverse-dev-storage

# Logging settings
LOG_LEVEL=DEBUG

# GCP settings (for local testing)
GCP_PROJECT_ID=your-dev-project-id
GCP_REGION=us-central1